# Production environment variables for Backend
# Copy this file to .env.production and fill with your values

NODE_ENV=production
PORT=3001

# API Configuration
API_BASE_URL=https://brasilapi.com.br/api/v1
CORS_ORIGIN=https://your-frontend-domain.com

# Logging
LOG_LEVEL=info

# Cache Configuration (24 hours)
CACHE_TTL=86400

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Security (optional)
ENABLE_HTTPS=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Health Check
HEALTH_CHECK_INTERVAL=30000
